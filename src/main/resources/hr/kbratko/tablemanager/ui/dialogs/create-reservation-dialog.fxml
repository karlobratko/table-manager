<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<DialogPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1">
  <content>
    <GridPane hgap="10.0" vgap="10.0">
      <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="154.0" minWidth="10.0" prefWidth="142.0" />
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="445.0" minWidth="10.0" prefWidth="408.0" />
      </columnConstraints>
      <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      </rowConstraints>
      <children>        
        <Label text="Reservation on:" GridPane.rowIndex="0">
          <font>
            <Font size="14.0" />
          </font>
        </Label>
        <TextField fx:id="tfOwner" GridPane.columnIndex="1" GridPane.rowIndex="0">
          <font>
            <Font size="14.0" />
          </font>
        </TextField>
        
        <Label text="Date:" GridPane.rowIndex="1">
          <font>
            <Font size="14.0" />
          </font>
        </Label>
        <DatePicker fx:id="dpDate" style="-fx-font-size: 14;" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        
        <Label text="Time:" GridPane.rowIndex="2">
          <font>
            <Font size="14.0" />
          </font>
        </Label>
        <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="10.0" GridPane.columnIndex="1"
              GridPane.rowIndex="2">
          <children>
            <Spinner fx:id="spHours" editable="true" style="-fx-font-size: 14;" />
            <Spinner fx:id="spMinutes" editable="true" style="-fx-font-size: 14;" />
          </children>
        </HBox>
        
        <Label text="Number of seats:" GridPane.halignment="LEFT" GridPane.rowIndex="3">
          <font>
            <Font size="14.0" />
          </font>
        </Label>
        <Spinner fx:id="spNrSeats" editable="true" style="-fx-font-size: 14;" GridPane.columnIndex="1"
                 GridPane.halignment="LEFT" GridPane.rowIndex="3" />
        
        <Label text="Description:" GridPane.halignment="LEFT" GridPane.rowIndex="4" GridPane.valignment="TOP">
          <font>
            <Font size="14.0" />
          </font>
        </Label>
        <TextArea fx:id="taDescription" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1"
                  GridPane.rowIndex="4" GridPane.vgrow="ALWAYS" />
        
        <Label text="Tables:" GridPane.rowIndex="5" GridPane.valignment="TOP">
          <font>
            <Font size="14.0" />
          </font>
        </Label>
        <ListView fx:id="lvRelatedTables" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1"
                  GridPane.rowIndex="5" GridPane.vgrow="ALWAYS" />
      </children>
      <BorderPane.margin>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
      </BorderPane.margin>
      <padding>
        <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
      </padding>
    </GridPane>
  </content>
  <ButtonType fx:id="btnCreate" text="Create" buttonData="OK_DONE" />
  <ButtonType text="Close" buttonData="CANCEL_CLOSE" />
</DialogPane>