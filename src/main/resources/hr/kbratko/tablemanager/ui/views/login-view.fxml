<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="600.0" spacing="20.0" xmlns="http://javafx.com/javafx/18"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="hr.kbratko.tablemanager.ui.controllers.LoginController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>
  <children>
    <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="27.0" prefWidth="170.0" text="Login">
      <font>
        <Font size="18.0" />
      </font>
      <padding>
        <Insets bottom="30.0" />
      </padding>
    </Label>
    <HBox alignment="CENTER" prefHeight="50.0" prefWidth="560.0">
      <children>
        <Label prefHeight="20.0" prefWidth="82.0" text="Username:">
          <font>
            <Font size="14.0" />
          </font>
          <HBox.margin>
            <Insets right="20.0" />
          </HBox.margin>
        </Label>
        <TextField text="kbratko" fx:id="tfUsername" prefHeight="25.0" prefWidth="250.0">
          <font>
            <Font size="14.0" />
          </font>
        </TextField>
      </children>
    </HBox>
    <HBox alignment="CENTER" prefHeight="50.0" prefWidth="560.0">
      <children>
        <Label prefHeight="20.0" prefWidth="82.0" text="Password:">
          <font>
            <Font size="14.0" />
          </font>
          <HBox.margin>
            <Insets right="20.0" />
          </HBox.margin>
        </Label>
        <PasswordField text="Pa$$w0rd" fx:id="pfPassword" prefHeight="25.0" prefWidth="250.0">
          <font>
            <Font size="14.0" />
          </font>
        </PasswordField>
      </children>
      <VBox.margin>
        <Insets bottom="20.0" />
      </VBox.margin>
    </HBox>
    <HBox alignment="CENTER" prefHeight="50.0" prefWidth="560.0">
      <children>
        <Button mnemonicParsing="false" onAction="#onRegisterBtnClick" styleClass="link"
                stylesheets="@../style/script.css" text="Don't have an account? Register...">
          <HBox.margin>
            <Insets right="20.0" />
          </HBox.margin>
          <font>
            <Font size="14.0" />
          </font>
        </Button>
        <Button fx:id="btnLogin" defaultButton="true" mnemonicParsing="false" onAction="#onLoginBtnClick" prefWidth="80.0" text="Login">
          <font>
            <Font size="14.0" />
          </font>
        </Button>
      </children>
    </HBox>
  </children>
</VBox>
